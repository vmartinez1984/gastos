@model Gastos.Core.Dtos.FiltroDeSubcategoriaDto

<h4>FiltroDeSubcategoriaDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstaActivo" class="control-label"></label>
                <select asp-for="EstaActivo" class="form-select">
                    <option value="0">Todos</option>
                    <option value="1">Activos</option>
                    <option value="2">Desactivados</option>
                </select>
                <span asp-validation-for="EstaActivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-items="@ViewBag.Categorias" asp-for="CategoriaId" class="form-select">
                    <option value="0">Todos</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionDePresupuestoId" class="control-label"></label>
                <select asp-items="@ViewBag.Versiones" asp-for="VersionDePresupuestoId" class="form-select">
                    <option value="0">Todos</option>
                </select>
                <span asp-validation-for="VersionDePresupuestoId" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
