<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gastos.Mobile.Vistas.Periodos.FormularioDePeriodo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Agregar periodo" HorizontalOptions="CenterAndExpand" />
            <Label Text="Nombre"/>
            <Entry x:Name="EntryNombre"/>
            <Label Text="Fecha inicial" />
            <DatePicker x:Name="DatePickerInicial"/>
            <Label Text="Fecha final" />
            <DatePicker x:Name="DatePickerFinal"/>
            <Button Text="Guardar" x:Name="BtnGuardar" Clicked="BtnGuardar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>